	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: dg",
			"type": "python",
			"request": "launch",
			"module": "dg.dg",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"args": [
				"${input:args}"
			]
		},
		{
			"name": "Python: dg unit tests",
			"type": "python",
			"request": "launch",
			"module": "unittest",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"args": [
				"discover",
				"tests.test"
			]
		},
		{
			"name": "Python: scripts (update_copyright_headers) ",
			"type": "python",
			"request": "launch",
			"module": "scripts.scripts",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"args": [
				"update-copyright-headers",
				"${workspaceFolder}"
			]
		}
	],
	"inputs": [
		{
			"id": "args",
			"description": "dg arguments",
			"type": "promptString"
		}
	]
}