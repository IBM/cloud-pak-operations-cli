	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: cpo",
			"type": "python",
			"request": "launch",
			"module": "cpo.cpo",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"args": [
				"${input:args}"
			]
		},
		{
			"name": "Python: unit tests (cpo)",
			"type": "python",
			"request": "launch",
			"module": "unittest",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"args": [
				"discover",
				"tests.test"
			]
		},
		{
			"name": "Python: unit tests (scripts)",
			"type": "python",
			"request": "launch",
			"module": "unittest",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"args": [
				"discover",
				"tests.test_scripts"
			]
		}
	],
	"inputs": [
		{
			"id": "args",
			"description": "cpo arguments",
			"type": "promptString"
		}
	]
}